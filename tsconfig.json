{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": ["./tsconfig.base.json"],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "checkJs": true,
    "types": ["node"]
  },
  "include": ["**/*", "**/.*"],
  "exclude": [
    "**/node_modules",
    ".*/**/*",
    ".*/**/.*",
    "src*/**/*",
    "src*/**/.*",
    "dist*/**/*",
    "dist*/**/.*"
  ]
}
