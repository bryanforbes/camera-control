{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:daily",
    ":enablePreCommit",
    ":assignee(bryanforbes)",
    ":timezone(America/Chicago)",
    ":combinePatchMinorReleases",
    "helpers:disableTypesNodeMajor",
    "group:vite",
    "group:tauriMonorepo"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "prPriority": 5
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "JS dev dependencies (non-major)",
      "groupSlug": "js-dev-dependencies"
    },
    {
      "matchManagers": ["cargo"],
      "matchDepTypes": ["dev-dependencies", "build-dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Rust dev and build dependencies (non-major)",
      "groupSlug": "rust-dev-build-dependencies"
    },
    {
      "groupName": "linters",
      "extends": ["packages:linters"],
      "matchPackageNames": [
        "typescript-eslint",
        "globals",
        "@types/eslint-{/,}**",
        "prettier-plugin{/,}**"
      ]
    },
    {
      "groupName": "tauri dependencies",
      "matchManagers": ["npm", "cargo"],
      "matchDepTypes": [
        "dependencies",
        "devDependencie",
        "dev-dependencies",
        "build-dependencies"
      ],
      "matchPackageNames": [
        "@tauri-apps/**",
        "tauri",
        "tauri-build",
        "/^tauri-plugin-/",
        "!tauri-specta",
        "!tauri-plugin-prevent-default"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"]
  },
  "configMigration": true
}
