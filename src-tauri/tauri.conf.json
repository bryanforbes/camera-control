{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Camera Control",
    "version": "23.4.2"
  },
  "tauri": {
    "pattern": {
      "use": "isolation",
      "options": {
        "dir": "../dist-isolation"
      }
    },
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "ask": true,
        "message": true
      },
      "window": {
        "create": true,
        "show": true,
        "setFocus": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "net.reigndropsfall.camera-control",
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'",
      "freezePrototype": true
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Camera Control",
        "acceptFirstMouse": true,
        "width": 350,
        "height": 450
      }
    ]
  }
}
