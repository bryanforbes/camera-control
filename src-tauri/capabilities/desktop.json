{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main",
    "settings"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:default",
    "store:default",
    "updater:default"
  ]
}
